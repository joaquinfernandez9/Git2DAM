<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>


<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<BorderPane fx:id="root" prefHeight="450.0" prefWidth="750.0"
            xmlns="http://javafx.com/javafx/6"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ui.pantallas.principal.PrincipalController">

    <top>
        <MenuBar fx:id="options">
            <Menu mnemonicParsing="false" text="Options">
                <MenuItem fx:id="mostrarCartas" mnemonicParsing="false" onAction="#menuClick"
                          text="Mostrar cartas"/>
                <MenuItem fx:id="buscarCarta" mnemonicParsing="false" onAction="#menuClick"
                          text="Buscar una carta"/>
                <MenuItem fx:id="filtrarCarta" mnemonicParsing="false" onAction="#menuClick"
                          text="Filtrar cartas"/>
                <MenuItem fx:id="getSets" mnemonicParsing="false" onAction="#menuClick"
                          text="Cartas sets"/>
            </Menu>
        </MenuBar>
    </top>

</BorderPane>
