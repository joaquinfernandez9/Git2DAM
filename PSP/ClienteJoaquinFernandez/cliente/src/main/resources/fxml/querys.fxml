<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ui.pantallas.querys.QueryController">
    <TableView fx:id="query3" layoutX="25.0" layoutY="100.0" prefHeight="325.0" prefWidth="300.0">
        <columns>
            <TableColumn fx:id="query3Col1" prefWidth="150.0" text="Article name" />
            <TableColumn fx:id="query3Col2" prefWidth="150.0" text="Ranking" />
        </columns>
    </TableView>
    <TableView fx:id="query4" layoutX="375.0" layoutY="100.0" prefHeight="325.0" prefWidth="300.0">
        <columns>
            <TableColumn fx:id="query4Col1" prefWidth="150.0" text="Article name" />
            <TableColumn fx:id="query4Col2" prefWidth="150.0" text="ID Article" />
            <TableColumn fx:id="query4Col3" prefWidth="75.0" text="Bad ratings" />
        </columns>
    </TableView>
    <Label layoutX="25.0" layoutY="41.0" text="Get the articles of a given type," />
    <Label layoutX="25.0" layoutY="58.0" text="together with the name of the newspaper" />
    <Label layoutX="375.0" layoutY="41.0" text="Get the articles with a rating lower than 5 of a given newspaper," />
    <Label layoutX="375.0" layoutY="58.0" text="indicating if the reader has rated more than 4 articles " />
    <Label layoutX="375.0" layoutY="75.0" text="with a lower-than-5 rating" />

    <Button layoutX="25.0" layoutY="450.0" mnemonicParsing="false" onAction="#query3" text="Query 3" />
    <Button layoutX="375.0" layoutY="450.0" mnemonicParsing="false" onAction="#query4" text="Query 4" />
   <TextField fx:id="queryDescription" layoutX="101.0" layoutY="450.0" promptText="Description" />
   <TextField fx:id="queryNewspaper" layoutX="443.0" layoutY="450.0" promptText="Newspaper ID" />

</AnchorPane>
